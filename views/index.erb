<h2>Welcome to Pizza Shop!</h2>
<div class="row">
  <div class="col-md-12">
  <% @products.each do |p| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <h4 class="text-center"><span class="label label-info">Pizza</span></h4>
        <img src="<%= p.path_to_image %>" class="img-responsive">
        <div class="caption">
          <div class="row">
            <div class="col-md-6 col-xs-6">
              <h3><%= p.title %></h3>
            </div>
            <div class="col-md-6 col-xs-6 price">
              <h3>
              <label><%= p.price %> grn</label></h3>
            </div>
          </div>
          <p><%= p.description %></p>
          <div class="row">
            <div class="col-md-12">
              <button class="btn btn-sm btn-success btn-product" onclick="add_to_cart(<%= p.id %>)"><span class="glyphicon glyphicon-shopping-cart"></span> Add to cart</button>
            </div>
          </div>
          <p></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
$(function() {
  update_orders_input();
  update_orders_button();
});
</script>